@model ClinicalManagementSystem_Team5.Models.Patient

@{
    ViewData["Title"] = "Add Patient";
}

<h1 class="text-center text-primary">Add Patient</h1>


<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <!-- Form to add a patient -->
        <form asp-action="Create" class="shadow-lg p-4 mb-5 bg-white rounded">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Patient Name Field -->
            <div class="form-group mb-3">
                <label asp-for="PatientName" class="control-label font-weight-bold"></label>
                <input asp-for="PatientName" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>

            <!-- Date of Birth Field -->
            <div class="form-group mb-3">
                <label asp-for="DOB" class="control-label font-weight-bold"></label>
                <input asp-for="DOB" class="form-control" type="date" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <!-- Gender Field -->
            <div class="form-group mb-3">
                <label asp-for="Gender" class="control-label font-weight-bold"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="" disabled selected>Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <!-- Blood Group Field -->
            <div class="form-group mb-3">
                <label asp-for="BloodGroup" class="control-label font-weight-bold"></label>
                <select asp-for="BloodGroup" class="form-control">
                    <option value="" disabled selected>Select Blood Group</option>
                    <option value="A+">A+</option>
                    <option value="A-">A-</option>
                    <option value="B+">B+</option>
                    <option value="B-">B-</option>
                    <option value="AB+">AB+</option>
                    <option value="AB-">AB-</option>
                    <option value="O+">O+</option>
                    <option value="O-">O-</option>
                </select>
                <span asp-validation-for="BloodGroup" class="text-danger"></span>
            </div>

            <!-- Phone Number Field -->
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="control-label font-weight-bold"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Address Field -->
            <div class="form-group mb-3">
                <label asp-for="Address" class="control-label font-weight-bold"></label>
                <textarea asp-for="Address" class="form-control" placeholder="Enter address"></textarea>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Email Field -->
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label font-weight-bold"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Submit Button -->
            <div class="form-group text-center">
                <input type="submit" value="Add Patient" class="btn btn-primary px-4 py-2" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    <!-- Ensure validation scripts are included -->
    @Html.Partial("_ValidationScriptsPartial")
}

<!-- Custom CSS for improved look and feel -->
<style>
    body {
        background-color: skyblue;
    }

    h1 {
        margin-bottom: 20px;
    }

    form {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }

    label {
        font-weight: 600;
    }

    input::placeholder,
    textarea::placeholder {
        color: #6c757d;
    }

    .form-control {
        border-radius: 5px;
    }
</style>
